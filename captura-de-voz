import sounddevice as sd 
import wavio as wv 
import numpy
from scipy.io.wavfile import write
Nome=str(input("Digite o seu nome:"))
for i in range(10):
    freq=16000
    tempo=2
    gravar=sd.rec(int(tempo*freq), samplerate=freq, channels=2)
    sd.wait()
    sampwidth=2
    write(f"voice-{Nome}-{i}.wav", freq, gravar)
    wv.write(f"voice-{Nome}-{i}.wav", gravar, freq, sampwidth=sampwidth)
